%html{ :xmlns => 'http://www.w3.org/1999/xhtml'  }
  %head
    %title= yield(:head_title) || escape_once("#{Locomotive.config.name} &mdash; #{current_site.name}")

    = javascript_include_tag "box"
    = stylesheet_link_tag "box", :media => 'screen'

    / [if IE]
      = stylesheet_link_tag "ie", :media => 'screen'

    = yield :head

  %body{ :class => controller.controller_name }
    #wrapper
      #light.container
        #panel.container
          %h1!= title

          = yield